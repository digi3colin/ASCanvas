package {	import flash.display.Sprite;		import com.gamemeal.html.Canvas;	/**
	 * @author Colin
	 */
	public class TestSample6 {		public function TestSample6(root:Sprite):void{			var canvas:Canvas = new Canvas("myCanvas",160,360);			var ctx:Canvas = canvas.getContext("2d");			for (var i:int=0;i<4;i++){			  for(var j:int=0;j<3;j++){			    ctx.beginPath();			    var x:Number              = 25+j*50;               // x coordinate			    var y:Number              = 25+i*50;               // y coordinate			    var radius:Number         = 20;                    // Arc radius			    var startAngle:Number     = 0;                     // Starting point on circle			    var endAngle:Number       = Math.PI+(Math.PI*j)/2; // End point on circle			    var anticlockwise:Boolean = i%2==0 ? false : true; // clockwise or anticlockwise						    ctx.arc(x,y,radius,startAngle,endAngle, anticlockwise);						    if (i>1){			      ctx.fill();			    } else {			      ctx.stroke();			    }			  }			}			root.addChild(ctx);		}	}}